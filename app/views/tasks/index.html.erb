<% if logged_in? %>
  <h1>タスク一覧</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>

  <%= link_to '新規タスクの作成', new_task_path %>
  <%= link to 'Logout', logout_path %>
  
<% else %>
  <h1>Welcome to the Tasklist</h1>
  <%= link_to 'Sign up now!', signup_path %>
  <%= link_to 'Log in', login_path %>
<% end %>